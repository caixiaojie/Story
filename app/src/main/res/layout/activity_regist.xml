<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_regist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.junyao.cxj.story.activity.RegistActivity">
    <ImageView
        android:id="@+id/img_head"
        android:layout_margin="10dp"
        android:src="@drawable/iconportrait"
        android:layout_centerHorizontal="true"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <LinearLayout
        android:id="@+id/layout_regist"
        android:layout_margin="10dp"
        android:layout_below="@id/img_head"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:hint="账   号:"
            android:textColorHint="#898989"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="text"
                android:singleLine="true"
                android:imeActionId="@+id/et_nickname"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_account"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:hint="昵   称:"
            android:textColorHint="#898989"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="text"
                android:singleLine="true"
                android:imeActionId="@+id/et_password"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_nickname"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:hint="密   码:"
            android:textColorHint="#898989"
            app:passwordToggleEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:singleLine="true"
                android:inputType="textPassword"
                android:imeActionId="@+id/btn_regist"
                android:imeOptions="actionDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_password"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <Button
        android:layout_below="@id/layout_regist"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="regist"
        android:id="@+id/btn_regist"
        android:text="注    册"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/bottmbg"/>
</RelativeLayout>
