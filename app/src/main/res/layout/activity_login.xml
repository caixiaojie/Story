<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.junyao.cxj.story.activity.LoginActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iconlogin"/>
        <TextView
            android:text="细说我们的故事"
            android:textSize="20sp"
            android:textColor="#898989"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/accountinput"
            android:hint="账号:"
            android:textColorHint="#898989"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_account"
                android:text=""
                android:imeActionId="@+id/et_password"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordinput"
            android:hint="密码:"
            android:textColorHint="#898989"
            app:passwordToggleEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_password"
                android:imeActionId="@+id/btn_longin"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="登    录"
            android:textColor="@color/textcolor_select"
            android:textSize="20sp"
            android:onClick="login"
            android:id="@+id/btn_longin"
            android:background="@drawable/bottmbg"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_regist"
            android:onClick="regist"
            android:textColor="@color/textcolor_select"
            android:layout_gravity="right"
            android:text="没有账号？点击注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
